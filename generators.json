{
  "name": "nx/nest",
  "version": "0.1",
  "extends": ["@nrwl/workspace"],  
  "generators": {
    "application": {
      "factory": "./src/generators/application/application",
      "schema": "./src/generators/application/schema.json",
      "aliases": ["app"],
      "x-type": "application",
      "description": "Create a NestJS Neo4J application."
    },
    "init": {
      "factory": "./src/generators/init/init",
      "schema": "./src/generators/init/schema.json",
      "description": "Initialize the NestJS Neo4J application",
      "aliases": ["ng-add"],
      "hidden": true
    },
    "auth": {
      "factory": "./src/generators/auth/generate",
      "schema": "./src/generators/auth/schema.json",      
      "description": "Generate an Authentication resource."
    },
    "encryption": {
      "factory": "./src/generators/encryption/generate",
      "schema": "./src/generators/encryption/schema.json",
      "description": "Generate an Encryption resource."
    },
    "stripe": {
      "factory": "./src/generators/stripe/generate",
      "schema": "./src/generators/stripe/schema.json",
      "description": "Generate a Stripe subscription/checkout resource."
    },
    "neo4j": {
      "factory": "./src/generators/neo4j/generate",
      "schema": "./src/generators/neo4j/schema.json",
      "description": "Generate a Neo4J subscription/checkout resource."
    },
    "resource": {
      "factory": "./src/generators/resource/generate",
      "schema": "./src/generators/resource/schema.json",
      "description": "Generate a Neo4J Resource"
    },
    "user": {
      "factory": "./src/generators/user/generate",
      "schema": "./src/generators/user/schema.json",
      "description": "Generate a Neo4J User resource"
    }
  }
}
